@model CategoryCreateVM
@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/AdminArea/Views/Shared/_AdminLayout.cshtml";
}
<h1>Create Category Form</h1>
<div class="container">
    <div class="row">
        <div class="col-md-4">
            <form method="post" role="form">
                <div class="form-group">
                    <label asp-for="Name">Name</label>
                    <input asp-for="Name"  class="form-control" id="exampleInputEmail1" placeholder="Name">
                    <span class="text-danger" asp-validation-for="Name"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description">Description</label>
                    <input asp-for="Description" type="text" class="form-control" id="exampleInputPassword1" placeholder="Description">
                    <span class="text-danger" asp-validation-for="Description"></span>
                </div>
                <button type="submit" class="btn btn-primary mr-2">Submit</button>
                <button type="submit" class="btn btn-link">Cancel</button>
            </form>
        </div>
    </div>
</div>
@section Scripts{
    <partial name="_ValidationPartial" />
}

